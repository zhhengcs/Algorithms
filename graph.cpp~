//
strcut edgenode
{
	int to;
	int len;
	int next;
}Edges[maxm];

int head[maxn],k = 0;

void addedge(int i,int j,int len)
{
	Edges[k].to = j;
	Edges[k].len = len;
	Edges[k].next = head[i];
	head[i] = k++;
}